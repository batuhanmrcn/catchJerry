<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A54628"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="171dp"
        android:layout_height="0dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="42dp"
        android:gravity="center"
        android:text="Score : 0"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintStart_toStartOf="@+id/gridLayout2"
        app:layout_constraintTop_toBottomOf="@+id/timeText" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Time : 15"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/scoreText"
        app:layout_constraintEnd_toEndOf="@+id/scoreText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/scoreText"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="121dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreText">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_row="0"
            android:layout_column="0"
            app:srcCompat="@drawable/jerry"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/jerry"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_row="0"
            android:layout_column="2"
            app:srcCompat="@drawable/jerry"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/jerry"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_row="1"
            android:layout_column="1"
            app:srcCompat="@drawable/jerry"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_row="1"
            android:layout_column="2"
            app:srcCompat="@drawable/jerry"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_row="2"
            android:layout_column="0"
            app:srcCompat="@drawable/jerry"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_row="2"
            android:layout_column="1"
            app:srcCompat="@drawable/jerry"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="130dp"
            android:layout_height="115dp"
            android:layout_row="2"
            android:layout_column="2"
            app:srcCompat="@drawable/jerry"
            android:onClick="increaseScore"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>